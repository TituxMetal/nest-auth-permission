{
  "name": "nest-auth-permission",
  "version": "0.0.1",
  "description": "A comprehensive demonstration of authentication and authorization systems using NestJS, featuring a minimal e-commerce API as the use case.",
  "author": "Titux Metal (DEV) <github@lgdweb.fr>",
  "repository": "https://github.com/TituxMetal/nest-auth-permission",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "dev": "bun --watch --hot src/main.ts",
    "start": "nest start",
    "start:prod": "bun dist/main.js",
    "format": "prettier --write \"**/*.{ts,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,md,json}\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:check": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:cov": "bun test --coverage",
    "test:e2e": "bun test ./test/*.e2e-spec.ts"
  },
  "dependencies": {
    "@casl/ability": "^6.7.3",
    "@nestjs/common": "^11.1.8",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.8",
    "@nestjs/platform-express": "^11.1.8",
    "@prisma/adapter-libsql": "^6.18.0",
    "@prisma/client": "^6.18.0",
    "@thallesp/nestjs-better-auth": "^2.1.0",
    "argon2": "^0.44.0",
    "better-auth": "^1.3.34",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.39.0",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.8",
    "@types/bun": "^1.3.1",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.0",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "prettier": "^3.6.2",
    "prisma": "^6.18.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  }
}
